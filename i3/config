set $mod Mod4
set $terminal kitty

# font pango:monospace 8
font pango:IosevkaNerdFontPropo 15

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# lock screen before suspend
exec --no-startup-id xss-lock --transfer-sleep-lock -- betterlockscreen -l

# set lock screen wallpaper
exec --no-startup-id betterlockscreen -u "$HOME/Pictures/Wallpapers"

# set wallpapers
exec --no-startup-id feh --randomize --bg-scale --slideshow-delay 300 "$HOME/Pictures/Wallpapers"

# Theme
default_border pixel 1
default_floating_border pixel 1
gaps inner 4
include "$HOME/.config/i3/themes/modus_vivendi"

# System options
exec --no-startup-id xset r rate 250 30
exec --no-startup-id xrandr --size 5120x1440
exec --no-startup-id xrandr --output DP-4 --size 5120x1440 --rate 120.00

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# start dmenu (a program launcher)
bindsym $mod+slash exec --no-startup-id dmenu_run
# A more modern dmenu replacement is rofi:
# bindcode $mod+slash exec "rofi -modi drun,run -show drun"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# window layout
bindsym $mod+v split v
bindsym $mod+Shift+v split h
bindsym $mod+m fullscreen toggle

# floats
bindsym $mod+Shift+space floating toggle
floating_modifier $mod
tiling_drag modifier titlebar

# change focus between tiling / floating windows
bindsym $mod+Tab focus mode_toggle

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+a workspace number $ws1
bindsym $mod+s workspace number $ws2
bindsym $mod+d workspace number $ws3
bindsym $mod+f workspace number $ws4

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+a move container to workspace number $ws1
bindsym $mod+Shift+s move container to workspace number $ws2
bindsym $mod+Shift+d move container to workspace number $ws3
bindsym $mod+Shift+f move container to workspace number $ws4

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Escape exec "betterlockscreen -l"
bindsym $mod+Shift+Escape exec "i3-nagbar -t warning -m 'Really quit?' -b 'Yes' 'i3-msg exit'"

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

mode "resize" {
        set $resize_amount 5

        bindsym h resize shrink width $resize_amount px or $resize_amount ppt
        bindsym j resize shrink height $resize_amount px or $resize_amount ppt
        bindsym k resize grow height $resize_amount px or $resize_amount ppt
        bindsym l resize grow width $resize_amount px or $resize_amount ppt

        bindsym Left resize shrink width $resize_amount px or $resize_amount ppt
        bindsym Down resize shrink height $resize_amount px or $resize_amount ppt
        bindsym Up resize grow height $resize_amount px or $resize_amount ppt
        bindsym Right resize grow width $resize_amount px or $resize_amount ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

mode "app" {
        bindsym t exec $terminal; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+o mode "default"
}

bindsym $mod+o mode "app"
